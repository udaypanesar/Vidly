@model Vidly.ViewModel.MovieListViewModel
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>Movies</h2>

    <table class="table table-bordered table-hover">
        <tr>
            <th>Movies</th>
        </tr>

        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>@movie.Name</td>
            </tr>
        }
    </table>

